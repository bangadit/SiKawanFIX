<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".tv3">

    <android.support.v7.widget.Toolbar
        android:id="@+id/ToolbarAtas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:elevation="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ic_back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:fontFamily="@font/normal"
                android:text="Presensi"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/sp20"
                app:layout_constraintBottom_toBottomOf="@+id/ic_back"
                app:layout_constraintStart_toEndOf="@+id/ic_back"
                app:layout_constraintTop_toTopOf="@+id/ic_back" />


        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:background="@drawable/color_btn"
            >
            <ImageView
                android:id="@+id/imgfoto_siswa"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/user"
                />
            <TextView
                android:id="@+id/tvnama_siswa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="Rini Setiawati"
                app:layout_constraintStart_toEndOf="@id/imgfoto_siswa"
                android:textSize="16sp"
                android:fontFamily="@font/bold"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginVertical="15dp"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
    <TextView
        android:id="@+id/tvTanggalAbsensi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bold"
        android:textStyle="bold"
        android:padding="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="3 November 2018"
        android:background="@drawable/bg_polos"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardView"
        />
    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:padding="10dp"
        android:layout_marginTop="200dp"
        app:layout_constraintTop_toBottomOf="@id/tvTanggalAbsensi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:background="@android:color/white"
            android:padding="14dp">

            <TextView
                android:id="@+id/tvmapel1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="5dp"
                android:textStyle="bold"
                android:text="Bahasa Indonesia"
                android:textSize="14sp"
                android:fontFamily="@font/bold"
                app:layout_constraintTop_toTopOf="parent"/>
            <ImageView
                android:id="@+id/keterangan1"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@drawable/ceklisthijau"
                app:layout_constraintLeft_toRightOf="@id/tvmapel1"
                app:layout_constraintTop_toTopOf="@id/tvmapel1"
                app:layout_constraintBottom_toBottomOf="@id/tvmapel1"/>
            <TextView
                android:id="@+id/tvmapel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="5dp"
                android:text="Bahasa Inggris"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/bold"
                app:layout_constraintTop_toBottomOf="@id/tvmapel1"
                android:layout_marginVertical="16dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@drawable/ceklisthijau"
                app:layout_constraintLeft_toRightOf="@id/tvmapel2"
                app:layout_constraintTop_toTopOf="@id/tvmapel2"
                app:layout_constraintBottom_toBottomOf="@id/tvmapel2"
                app:layout_constraintStart_toStartOf="@id/keterangan1"/>

            <TextView
                android:id="@+id/tvmapel3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="5dp"
                android:text="Matematika"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/bold"
                app:layout_constraintTop_toBottomOf="@id/tvmapel2"
                android:layout_marginVertical="16dp"/>

            <ImageView
                android:id="@+id/keterangan3"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@drawable/ceklisthijau"
                app:layout_constraintLeft_toRightOf="@id/tvmapel3"
                app:layout_constraintTop_toTopOf="@id/tvmapel3"
                app:layout_constraintBottom_toBottomOf="@id/tvmapel3"
                app:layout_constraintStart_toStartOf="@id/keterangan1"/>
            <TextView
                android:id="@+id/tvmapel4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="5dp"
                android:text="Ilmu Pengetahuan Sosial"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/bold"
                app:layout_constraintTop_toBottomOf="@id/tvmapel3"
                android:layout_marginVertical="16dp"/>

            <ImageView
                android:id="@+id/keterangan4"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@drawable/ceklisthijau"
                app:layout_constraintLeft_toRightOf="@id/tvmapel4"
                app:layout_constraintTop_toTopOf="@id/tvmapel4"
                app:layout_constraintBottom_toBottomOf="@id/tvmapel4"
                app:layout_constraintStart_toStartOf="@id/keterangan1"
                app:layout_constraintEnd_toEndOf="@id/keterangan1"/>

            <TextView
                android:id="@+id/tvmapel5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="5dp"
                android:text="Pendidikan Kewarganegaraan"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/bold"
                android:layout_marginVertical="16dp"
                app:layout_constraintTop_toBottomOf="@id/tvmapel4"/>
            <ImageView
                android:id="@+id/keterangan5"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@drawable/ceklisthijau"
                app:layout_constraintLeft_toRightOf="@id/tvmapel5"
                app:layout_constraintTop_toTopOf="@id/tvmapel5"
                app:layout_constraintBottom_toBottomOf="@id/tvmapel5"
                app:layout_constraintStart_toStartOf="@id/keterangan1"
                app:layout_constraintEnd_toEndOf="@id/keterangan1"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>