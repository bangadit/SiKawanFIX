<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".NilaiUAS">

    <android.support.v7.widget.Toolbar
        android:id="@+id/ToolbarAtas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:elevation="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ic_back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:fontFamily="@font/normal"
                android:text="@string/uas"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/sp20"
                app:layout_constraintBottom_toBottomOf="@+id/ic_back"
                app:layout_constraintStart_toEndOf="@+id/ic_back"
                app:layout_constraintTop_toTopOf="@+id/ic_back" />


        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ToolbarAtas"
        >
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:background="@drawable/color_btn">

            <TextView
                android:id="@+id/tvnama_siswa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="Kelas 7A"
                android:textSize="18sp"
                android:fontFamily="@font/bold"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                app:layout_constraintTop_toTopOf="parent"
                />
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:padding="16dp"
        android:layout_marginTop="140dp"
        app:layout_constraintTop_toBottomOf="@id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:padding="14dp">

            <TextView
                android:id="@+id/tvmapel1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="5dp"
                android:textStyle="bold"
                android:text="Bahasa Indonesia"
                android:textSize="14sp"
                android:fontFamily="@font/bold"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/imgSimbolMapel1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:text="85"
                app:layout_constraintBottom_toBottomOf="@id/tvmapel1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvmapel1" />
            <TextView
                android:id="@+id/imgSimbolMapel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:text="85"
                app:layout_constraintBottom_toBottomOf="@id/tvmapel2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvmapel2" />

            <TextView
                android:id="@+id/tvmapel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:padding="5dp"
                android:text="Bahasa Inggris"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/bold"
                app:layout_constraintTop_toBottomOf="@id/tvmapel1"/>


            <TextView
                android:id="@+id/tvmapel3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:padding="5dp"
                android:text="Matematika"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/bold"
                app:layout_constraintTop_toBottomOf="@id/tvmapel2"
                android:layout_marginVertical="16dp"/>
            <TextView
                android:id="@+id/imgSimbolMapel3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:text="85"
                app:layout_constraintBottom_toBottomOf="@id/tvmapel3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvmapel3" />

            <TextView
                android:id="@+id/tvmapel4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:padding="5dp"
                android:text="Ilmu Pengetahuan Sosial"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/bold"
                app:layout_constraintTop_toBottomOf="@id/tvmapel3"
                android:layout_marginVertical="16dp"/>
            <TextView
                android:id="@+id/imgSimbolMapel4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:text="85"
                app:layout_constraintBottom_toBottomOf="@id/tvmapel4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvmapel4" />

            <TextView
                android:id="@+id/tvmapel5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:padding="5dp"
                android:text="Pendidikan Kewarganegaraan"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/bold"
                android:layout_marginVertical="16dp"
                app:layout_constraintTop_toBottomOf="@id/tvmapel4"/>
            <TextView
                android:id="@+id/imgSimbolMapel5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:text="85"
                app:layout_constraintBottom_toBottomOf="@id/tvmapel5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvmapel5" />

            <TextView
                android:id="@+id/tvmapel6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:padding="5dp"
                android:text="Ilmu Pengetahuan Alam"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/bold"
                app:layout_constraintTop_toBottomOf="@id/tvmapel5"
                android:layout_marginVertical="16dp"/>
            <TextView
                android:id="@+id/imgSimbolMapel6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:fontFamily="@font/normal"
                android:text="85"
                app:layout_constraintBottom_toBottomOf="@id/tvmapel6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvmapel6" />

            <TextView
                android:id="@+id/tvmapel7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:padding="5dp"
                android:text="Bahasa Jawa"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/bold"
                app:layout_constraintTop_toBottomOf="@id/tvmapel6"
                android:layout_marginVertical="16dp"/>
            <TextView
                android:id="@+id/imgSimbolMapel7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:text="85"
                app:layout_constraintBottom_toBottomOf="@id/tvmapel7"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvmapel7" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>