<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".LaporFeedback">

    <android.support.v7.widget.Toolbar
        android:id="@+id/ToolbarAtas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:elevation="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:fontFamily="@font/normal"
                android:text="@string/tvLapor"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/sp20"/>


        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/ivgambarlaporan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:src="@drawable/gambar_laporan"
        app:layout_constraintCircleRadius="10dp"
        app:layout_constraintEnd_toEndOf="@id/ToolbarAtas"
        app:layout_constraintStart_toStartOf="@id/ToolbarAtas"
        app:layout_constraintTop_toBottomOf="@id/ToolbarAtas" />

    <TextView
        android:id="@+id/tvFasilitasSekolah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/bold"
        android:text="@string/tvLaporFeedback"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/ivgambarlaporan"
        app:layout_constraintStart_toStartOf="@id/ivgambarlaporan"
        app:layout_constraintTop_toBottomOf="@id/ivgambarlaporan" />

    <TextView
        android:id="@+id/tvStatusLaporan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/bold"
        android:text="@string/tvStatusLaporan"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@id/ivgambarlaporan"
        app:layout_constraintTop_toBottomOf="@id/ivgambarlaporan" />

    <ImageView
        android:id="@+id/ivStatusLaporan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:src="@drawable/status_laporan"
        app:layout_constraintStart_toStartOf="@+id/tvStatusLaporan"
        app:layout_constraintTop_toBottomOf="@id/tvStatusLaporan" />

    <TextView
        android:id="@+id/tvStatusLaporanGambar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:fontFamily="@font/normal"
        android:text="@string/tvMenunggu"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/ivStatusLaporan"
        app:layout_constraintLeft_toRightOf="@id/ivStatusLaporan"
        app:layout_constraintTop_toBottomOf="@id/tvStatusLaporan"
        app:layout_constraintTop_toTopOf="@id/ivStatusLaporan" />

    <TextView
        android:id="@+id/tvDeskripsiLaporan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/bold"
        android:text="@string/tvStatusLaporan"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@id/tvStatusLaporan"
        app:layout_constraintTop_toBottomOf="@id/tvStatusLaporan" />

    <TextView
        android:id="@+id/tvIsiDeskripsiLaporan"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/normal"
        android:text="@string/tvIsiDeskripsiLap"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/tvDeskripsiLaporan"
        app:layout_constraintTop_toBottomOf="@id/tvDeskripsiLaporan" />

    <Button
        android:id="@+id/btnKembali"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/color_btn"
        android:text="@string/lihat_daftar"
        android:fontFamily="@font/normal"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>