<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/colorWhite"
                                             tools:context=".LaporLanjutanActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/ToolbarAtas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:elevation="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ic_back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:fontFamily="@font/normal"
                android:text="@string/tvLapor"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/sp20"
                app:layout_constraintBottom_toBottomOf="@+id/ic_back"
                app:layout_constraintStart_toEndOf="@+id/ic_back"
                app:layout_constraintTop_toTopOf="@+id/ic_back" />


        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.Toolbar>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/btnLaporkanKeluhanLanjut"
            app:layout_constraintTop_toBottomOf="@+id/ToolbarAtas">


        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:focusableInTouchMode="true"
                android:layout_height="match_parent">

            <TextView
                    android:id="@+id/textView3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginRight="24dp"
                    android:fontFamily="normal"
                    android:text="@string/tvBuatLaporSebelumUpload"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                    android:id="@+id/Iunggah"
                    android:layout_width="95dp"
                    android:layout_height="106dp"
                    app:layout_constraintTop_toBottomOf="@id/textView3"
                    app:layout_constraintStart_toStartOf="@id/textView3"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_dashline"
            />
            <ImageView
                    android:layout_width="78.96dp"
                    android:layout_height="40dp"
                    app:layout_constraintStart_toStartOf="@id/Iunggah"
                    app:layout_constraintEnd_toEndOf="@id/Iunggah"
                    app:layout_constraintTop_toTopOf="@id/Iunggah"
                    app:layout_constraintBottom_toBottomOf="@id/Iunggah"
                    android:background="@drawable/unggah_foto"
            />

            <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/bold"
                    android:text="@string/tvLokasiFoto"
                    app:layout_constraintStart_toStartOf="@id/textView3"
                    app:layout_constraintTop_toBottomOf="@id/Iunggah"/>

            <EditText
                    android:id="@+id/editText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/background_edt"
                    android:fontFamily="@font/normal"
                    android:hint="@string/tvLokasiFoto"
                    android:inputType="text"
                    android:padding="16dp"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@id/textView3"
                    app:layout_constraintStart_toStartOf="@+id/textView3"
                    app:layout_constraintTop_toBottomOf="@+id/textView4"/>

            <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/pilih_lewat_peta"
                    app:layout_constraintStart_toStartOf="@+id/editText"
                    app:layout_constraintTop_toBottomOf="@+id/editText"/>

            <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/normal"
                    android:text="Judul keluhan"
                    app:layout_constraintStart_toStartOf="@+id/imageView2"
                    app:layout_constraintTop_toBottomOf="@+id/imageView2"/>

            <EditText
                    android:id="@+id/editText2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/background_edt"
                    android:fontFamily="@font/normal"
                    android:hint="Judul keluhan"
                    android:inputType="text"
                    android:padding="16dp"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@id/textView3"
                    app:layout_constraintStart_toStartOf="@+id/textView3"
                    app:layout_constraintTop_toBottomOf="@+id/textView5"/>

            <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/bold"
                    android:text="Deskripsi keluhan"
                    app:layout_constraintStart_toStartOf="@+id/editText2"
                    app:layout_constraintTop_toBottomOf="@+id/editText2"/>

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/background_edt"
                    android:fontFamily="@font/normal"
                    android:hint="Tuliskan keluhan anda"
                    android:inputType="textLongMessage"
                    android:padding="16dp"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/editText2"
                    app:layout_constraintStart_toStartOf="@+id/textView6"
                    app:layout_constraintTop_toBottomOf="@+id/textView6"/>


        </android.support.constraint.ConstraintLayout>

    </ScrollView>

    <Button
            android:id="@+id/btnLaporkanKeluhanLanjut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/color_btn"
            android:fontFamily="@font/bold"
            android:text="LAPORKAN KELUHAN"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>


</android.support.constraint.ConstraintLayout>